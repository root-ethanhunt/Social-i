<button id="open-button" onclick="openForm()">Chat</button>

<div id="my-form">

	<% if (locals.user){ %>
		<div id="user-chat-box">
			<ul id="chat-messages-list">
				<li class="other-message">
					<span>Other Message</span>
				</li>
				<li class="self-message">
					<span>
						Self Message
					</span>
					
				</li>
	
			</ul>
			<div id="chat-message-input-container">
				<input id="chat-message-input" placeholder="Type message here">
				<button id="send-message">Send</button>
			</div>
			<button id="close-button" onclick="closeForm()">Close</button>
	
		</div>
	<% } %>
	
</div>


<script>
	function openForm() {
	  document.getElementById("my-form").style.display = "block";
	}
	
	function closeForm() {
	  document.getElementById("my-form").style.display = "none";
	}
	</script>

