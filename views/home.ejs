<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/chat_box.css">

 
    <div id="home-container">
        <section id="feed-posts">
            <div id="post-box">

                <!-- <h4>
                    Posts
                </h4> -->
               
        
                <% if (locals.user){ %>
                <form action="/posts/create" id="new-post-form" method="POST">
                    <textarea name="content" cols="100" rows="5" placeholder="Type Here..." required></textarea>
                    <input type="submit" value="Post">
                </form>
        
                <% } %>

            </div>
           
    
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                      <div id="each-posts">
                        <%- include('_post') -%>
                      </div>  
                     <% } %>   
                </ul>
            </div>
            
        </section>
       
      
          <aside id="aside-container">
              <%if(locals.user){%>
            <section id="all-Friends">
                
                <h4>
                    Friends
                </h4>
                 
                <br>
                <%for(var i=0;i<friends.length;i++){%>
                    
                    <p>
                        <img src="<%=friends[i].avatar %>" alt="<%= friends[i].name %>" width="30" height="30">
                        <a href="/users/profile/<%= friends[i]._id%>"><%= friends[i].name%></a>
                    </p>    
            <%}%>
        
              <%}%>
        
            </section>

            <section id="all-users">
                <h4>
                    All Users
                </h4>
                <br>
        
                <% for(u of all_users){%>
                    <p>
                        <img src="<%=u.avatar %>" alt="<%= u.name %>" width="30" height="30">
                        <a href="/users/profile/<%= u.id%>"><%= u.name%></a>
                    </p>
                    <%}%>
        
            </section>
        
            <%- include('_chat_box') -%>
          </aside>

        

         
         
       
    
    </div>

    <script src="/js/home_post_comments.js" ></script>
    <script src="/js/home_posts.js"></script>


